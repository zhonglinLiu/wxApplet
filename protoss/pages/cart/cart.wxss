/* pages/cart/cart.wxss */

.order-box{
  height: 200rpx;
  width: 100%;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.selected-box{
  width:100rpx;
  height: 100%;
  display: flex;
  flex-direction:column;
  justify-content: center;
  align-items: center;
}
.selected-box image{
  width:40rpx;
  height: 40rpx;
  
}

.image-box{
  width:200rpx;
  height: 100%;
  display: flex;
  flex-direction:column;
  justify-content: center;
  align-items: center;
}
.image-box image{
  width:180rpx;
  height: 180rpx;
}

.text-box{
  width:420rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 30rpx;
}
.text-box .top-box{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.text-box .bottom-box{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.text-box .bottom-box .bottom-box-left{
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.text-box .bottom-box .bottom-box-left view{
  width:33%;
}

.text-box .bottom-box .bottom-box-right{
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

/*bar*/

.total-bar{
  width:100%;
  height: 100rpx;
  background: #AB956D;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
  color: #fff;
  position: absolute;
  bottom: 0;
}

.total-bar .select-left{
  width:40%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.total-bar .select-left image{
  width:50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}


.total-bar .select-right{
  width: 40%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.total-bar .select-right .total-price{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.total-bar .select-right image{
   width:30rpx;
  height: 30rpx;
}

.disabled{
  color: #ccc;
}

.emptyMsg{
  width:100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #ccc;
  font-size: 30rpx;
}

